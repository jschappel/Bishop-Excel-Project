<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox id="Vbox" fx:id="vbox" prefHeight="224.0" prefWidth="376.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.scrapper.Controller">
   <children>
      <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="Instructions" />
                  <MenuItem mnemonicParsing="false" text="Website Status" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Info">
            <items>
              <MenuItem mnemonicParsing="false" text="Version" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <HBox>
         <children>
            <Label prefHeight="103.0" prefWidth="237.0" text="Welcome to Bishop Finder. To get started choose a file to get started or press create new." wrapText="true" />
            <Region />
            <ImageView pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@/resources/images/RenewTree.png" />
               </image>
            </ImageView>
         </children>
         <VBox.margin>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </VBox.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <HBox>
         <children>
            <Button fx:id="fileButton" mnemonicParsing="false" onAction="#chooseFile" text="Choose File" />
            <Region prefHeight="27.0" prefWidth="68.0" />
            <RadioButton fx:id="radioChoice" mnemonicParsing="false" text="Create new document">
               <padding>
                  <Insets top="3.0" />
               </padding>
            </RadioButton>
         </children>
         <VBox.margin>
            <Insets bottom="8.0" left="8.0" right="8.0" />
         </VBox.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button fx:id="runButton" mnemonicParsing="false" onAction="#runProgram" prefHeight="27.0" prefWidth="93.0" text="Run" />
            <Region prefHeight="27.0" prefWidth="58.0" />
            <ProgressBar fx:id="pIndicator" prefWidth="200.0" progress="0.0" />
         </children>
         <VBox.margin>
            <Insets bottom="8.0" left="8.0" right="8.0" />
         </VBox.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </children>
</VBox>